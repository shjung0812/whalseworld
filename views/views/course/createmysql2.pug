 body
  script.
   function myfunction(){
   var mysqlcontid=document.getElementsByClassName("prbcontent")
   document.getElementById('idmysqlcontent').value=mysqlcontid[0].innerHTML
   
   var mysqlid=document.getElementsByClassName('prbbutton')
   document.getElementById('idmysqlprbid').value=mysqlid[0].innerHTML

   var mysqlsource=document.getElementsByClassName('prbsource');
   document.getElementById('idmysqlsource').value=mysqlsource[0].innerHTML

   document.getElementById('rdupdate').checked='checked'
   }
   function InsertImage(){
    var mysqlid=document.getElementsByClassName('prbbutton');
    document.getElementById('prbidforpic').value=mysqlid[0].innerHTML;
   }
   function MoveToCreate(){
    
   	document.getElementById('rdcreate').checked='checked'
   }
   window.onload=function(){
    InsertImage();
    myfunction();
   }
  h1 
   a(href='/admin/createmysqlpg?stchk=0')  Create Mysql page
