  h3 create mysql content
  div
   form(action='/admin/createmysql', method='post')
    p source
    input(type='text', name='mysqlsource',id='idmysqlsource')
    p insert mysql id
    input(type='text', name='mysqlid',id='idmysqlprbid' onclick='MoveToCreate()')
    p insert mysql content
    textarea(name='mysqlcontent', id='idmysqlcontent', rows='22', style='width:645px;')
    br
    input(type='radio', name='mysqldb',value=0 checked id='rdcreate')
