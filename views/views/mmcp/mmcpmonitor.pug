					//mmcpontop.appendChild(mmcpontopa);
					/*
					mmcpontop.onclick=function(i){
						return function(){
							socket2.emit('vdrgsharehomework',{menteeid:username,mentorid:userinfo.username,mode:'shareprb_ind',auxaddr:'/mmcphomework/',prbid:i});
						}
